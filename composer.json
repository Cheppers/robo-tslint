{
    "name": "cheppers/robo-tslint",
    "description": "Robo task wrapper for tslint",
    "license": "GPL-2.0+",
    "config": {
        "bin-dir": "bin",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "cheppers/asset-jar": "^0.0",
        "consolidation/robo": "1.0.0-RC2"
    },
    "require-dev": {
        "cheppers/git-hooks": "^0.0.8",
        "cheppers/robo-phpcs": "^0.0.4",
        "codeception/codeception": "^2.2",
        "symfony/process": "^2.8|^3.1"
    },
    "autoload": {
        "psr-4": {
            "Cheppers\\Robo\\TsLint\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@deploy-git-hooks",
            "@npm-install"
        ],
        "post-update-cmd": [
            "@deploy-git-hooks",
            "@npm-install"
        ],
        "deploy-git-hooks": "\\Cheppers\\GitHooks\\Main::deploy",
        "npm-install": "cd tests/_data && npm install"
    }
}
